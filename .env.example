# PETS Production Environment Variables
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# NEVER COMMIT .env TO GIT!

# Blockchain
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# Wallet (CRITICAL - NEVER LOG OR COMMIT REAL VALUES)
HOT_WALLET_PRIVATE_KEY=0x...  # REPLACE WITH REAL KEY
HOT_WALLET_PERCENTAGE=15  # 10-20% recommended
ENCRYPTION_KEY=...  # Fernet key for encryption at rest

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pets
TIMESCALEDB_CHUNK_INTERVAL=7 days
TIMESCALEDB_COMPRESSION_AFTER=14 days

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=...

# Polymarket API
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com

# Circuit Breakers
MAX_CONSECUTIVE_LOSSES=3
MAX_DAILY_LOSS_PCT=5.0
MAX_BOT_DRAWDOWN_PCT=25.0
MAX_PORTFOLIO_DRAWDOWN_PCT=40.0

# Bot Configuration
BOT8_SPREAD_THRESHOLD=0.15
BOT8_ENTRY_LOW=0.20
BOT8_ENTRY_HIGH=0.80
BOT8_HOLD_HOURS_MIN=24
BOT8_HOLD_HOURS_MAX=48
BOT8_TARGET_DELTA=0.30
BOT8_STOP_LOSS_PCT=0.10

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_EXPORT_PORT=8001

# Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
EMAIL_ALERTS_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@pets.com
EMAIL_TO=admin@pets.com
EMAIL_PASSWORD=...

SMS_ALERTS_ENABLED=false
TWILIO_ACCOUNT_SID=...
TWILIO_AUTH_TOKEN=...
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1234567890

# API
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4

# Dashboard
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/pets/pets.log

# Security
ALLOWED_ORIGINS=http://localhost:8501,https://your-domain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
