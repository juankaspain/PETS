# PETS - Production Environment Variables
# Copy to .env and fill with your values
# NEVER commit .env to git

# === WALLET CONFIGURATION ===
# SECURITY: Store mnemonic OFFLINE (written on paper)
# This is for loading existing wallet only
MNEMONIC_PHRASE=your-24-word-mnemonic-phrase-here

# Hot wallet percentage (10-20%, default 15%)
HOT_WALLET_PERCENTAGE=0.15

# Encryption key for private key storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# === BLOCKCHAIN CONFIGURATION ===
# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-rpc.com

# Polymarket CLOB contract address (Polygon)
CLOB_CONTRACT_ADDRESS=0x...

# Gas configuration
MAX_GAS_PRICE_GWEI=100
GAS_PRICE_BUFFER=1.1

# === DATABASE CONFIGURATION ===
# TimescaleDB
DATABASE_URL=postgresql://user:pass@localhost:5432/pets

# Redis
REDIS_URL=redis://localhost:6379/0

# === API CONFIGURATION ===
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# === DASHBOARD CONFIGURATION ===
STREAMLIT_PORT=8501

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === MONITORING ===
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000

# === ALERTS ===
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email alerts
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@pets.com
EMAIL_TO=admin@pets.com
EMAIL_PASSWORD=your-app-password

# === CIRCUIT BREAKERS ===
# Maximum consecutive losses before stop
MAX_CONSECUTIVE_LOSSES=3

# Maximum daily loss percentage
MAX_DAILY_LOSS_PCT=0.05

# Maximum bot drawdown percentage
MAX_BOT_DRAWDOWN_PCT=0.25

# Maximum portfolio drawdown percentage
MAX_PORTFOLIO_DRAWDOWN_PCT=0.40

# === BOT 8 CONFIGURATION ===
# Strategy parameters (can override defaults)
BOT8_SPREAD_THRESHOLD=0.15
BOT8_ENTRY_THRESHOLD_LOW=0.20
BOT8_ENTRY_THRESHOLD_HIGH=0.80
BOT8_HOLD_HOURS_MIN=24
BOT8_HOLD_HOURS_MAX=48
BOT8_TARGET_DELTA=0.30
BOT8_STOP_LOSS_PCT=0.10
